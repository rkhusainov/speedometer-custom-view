<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="speedometerProgressStyle">@style/SpeedometerDefaultProgressStyle</item>
    </style>

    <style name="SpeedometerDefaultProgressStyle">
        <item name="color_back_circle">@color/colorGray</item>
        <item name="color_low">@color/colorBlue</item>
        <item name="color_middle">@color/colorGreen</item>
        <item name="color_high">@color/colorRed</item>
        <item name="textSize">@dimen/default_text_size</item>
    </style>

</resources>
